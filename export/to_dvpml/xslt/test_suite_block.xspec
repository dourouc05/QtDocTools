          <db:colspec colname="c1" colnum="1" colwidth="1*"/>
          <db:colspec colname="c2" colnum="2" colwidth="1*"/>
          <db:thead>
            <db:row>
              <db:entry/>
              <db:entry/>
            </db:row>
          </db:thead>
          <db:tbody>
            <db:row>
              <db:entry/>
              <db:entry/>
            </db:row>
            <db:row>
              <db:entry/>
              <db:entry/>
            </db:row>
          </db:tbody>
        </db:tgroup>
      </db:informaltable>
    </x:context>
    <x:expect label="Table">
      <tableau width="80%" border="1" sautDePagePdf="0">
