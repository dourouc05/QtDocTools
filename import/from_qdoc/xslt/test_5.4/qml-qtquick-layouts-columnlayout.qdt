            <db:para>
               <db:link xlink:href="qml-qtquick-layouts-layout.db#minimumWidth-attached-prop">Layout.minimumWidth</db:link>
            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qml-qtquick-layouts-layout.db#minimumHeight-attached-prop">Layout.minimumHeight</db:link>
            </db:para>
         </db:listitem>
