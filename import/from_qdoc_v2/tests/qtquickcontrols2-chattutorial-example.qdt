            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter1-settingup-chapter1-settingup-pro.webxml">examples/quickcontrols2/chattutorial/chapter1-settingup/chapter1-settingup.pro</db:link>
            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter1-settingup-main-cpp.webxml">examples/quickcontrols2/chattutorial/chapter1-settingup/main.cpp</db:link>
            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter1-settingup-main-qml.webxml">examples/quickcontrols2/chattutorial/chapter1-settingup/main.qml</db:link>
            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter1-settingup-qml-qrc.webxml">examples/quickcontrols2/chattutorial/chapter1-settingup/qml.qrc</db:link>
            </db:para>
