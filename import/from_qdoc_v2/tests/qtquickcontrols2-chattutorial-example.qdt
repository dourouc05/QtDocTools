            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter.webxml">examples/quickcontrols2/chattutorial/shared/Albert_Einstein.png</db:link>
            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter.webxml">examples/quickcontrols2/chattutorial/shared/Albert_Einstein@2x.png</db:link>
            </db:para>
         </db:listitem>
         <db:listitem>
            <db:para>
               <db:link xlink:href="qtquickcontrols2-chattutorial-chapter.webxml">examples/quickcontrols2/chattutorial/shared/Albert_Einstein@3x.png</db:link>
            </db:para>
         </db:listitem>
