      <db:programlisting role="raw-html">&lt;div class="qmlproto"&gt;&lt;table class="qmlname"&gt;&lt;tbody&gt;&lt;tr valign="top" class="odd" id="color-attached-method"&gt;&lt;td class="tblQmlFuncNode"&gt;&lt;p&gt;&lt;span class="type"&gt;color&lt;/span&gt; &lt;span class="name"&gt;color&lt;/span&gt;(&lt;span class= type&gt;enumeration&lt;/span&gt; &lt;i&gt;predefined&lt;/i&gt;)&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/tbody&gt;&lt;/table&gt;&lt;/div&gt;</db:programlisting>
